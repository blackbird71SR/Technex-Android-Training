<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AndroidActivity"
    android:id="@+id/layout1">

    <TextView
        android:id="@+id/descr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. What is latest android version?"
        android:layout_below="@+id/descr"
        android:textSize="15sp"
        android:id="@+id/aq1"/>

    <CheckBox
        android:id="@+id/aq1a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aq1"
        android:text="Android P"/>

    <CheckBox
        android:id="@+id/aq1a2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aq1a1"
        android:text="Android Oreo" />

    <CheckBox
        android:id="@+id/aq1a3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aq1a2"
        android:text="Android Nougat" />

    <CheckBox
        android:id="@+id/aq1a4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aq1a3"
        android:text="Android Marshmello" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#d3d3d3"
        android:text="Home"
        android:textColor="#000000"
        android:layout_alignParentLeft="true" />

</RelativeLayout>